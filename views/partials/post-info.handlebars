<div class="col s12 m8 offset-m2">
  <div class="card">
    <div class="card-content">
      <a href="/post/1" class="card-title">{{title}}</a>
      <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        <div class="card-actions">
          <a class="btn-floating btn waves-effect waves-light red right delete-post-btn"><i class="material-icons">delete</i></a>
          <a class="btn-floating btn waves-effect waves-light amber right" href="/posts/edit/{{id}}"><i class="material-icons">edit</i></a>
        </div>
    </div>
    <div class="divider"></div>
    <div class="card-content">
      <p>{{body}}</p>
    </div>
  </div>
</div>

<script src="/javascript/delete-post.js"></script>