{{#if posts.length}}
  <h4>Your Posts</h4>

  {{#each posts as |post|}}
    {{> post-info post dashboard=true}}
  {{/each}}

{{else}}

<div class="card">
  <div class="card-content">
    <div class="card-title">
      {{#unless posts.length}}
        <div class="row">
          <div class="col s12 center-align">
            You have no posts.
          </div>
        </div>
      {{/unless}}
    </div>
  </div>
</div>

{{/if}}

<div class="row">
  <div class="col s12 center-align">
    <a href="/posts/add" class="waves-effect waves-light btn">Add a Post</a>
  </div>
</div>

<script src="/javascript/delete-post.js"></script>
